{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es5", 
      "es6",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@config/*": [
        "/config/*"
      ],
      "@interfaces/*": [
        "/interfaces/*"
      ],
      "@routes/*": [
        "/routes/*"
      ],
      "@services/*": [
        "/services/*"
      ],
      "@utils/*": [
        "/utils/*"
      ],
      "@models/*": [
        "/db/models/*"
      ],
      "@db/*": [
        "/db/*"
      ],
      "@middlewares/*": [
        "/middlewares/*"
      ]
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "./",
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}